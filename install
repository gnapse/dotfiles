#!/usr/bin/env sh

# Grab all the submodules
cd ~/.dotfiles
git submodule init
git submodule update

# Create symlinks to dotfiles
dotfiles='zshrc gitconfig gitignore gemrc railsrc irbrc pryrc tmux.conf vim vimrc'
for f in $dotfiles; do
  ln -s ~/.dotfiles/$f ~/.$f
done

# Set up some extra files and directories
mkdir -p ~/.vim/tmp/undo
ln -s ~/.dotfiles/zsh/gnapse.zsh-theme ~/.dotfiles/oh-my-zsh/custom/
ln -s ~/.dotfiles/zsh/plugins ~/.dotfiles/oh-my-zsh/custom/

# Set zsh as the default shell
chsh -s /bin/zsh

# We're done
echo "Start a new terminal and enjoy!"
