#!/usr/bin/env sh

# Grab all the submodules
cd ~/.dotfiles
git submodule init
git submodule update

# Create symlinks to dotfiles
dotfiles=(zshrc gitconfig gitignore)
for f in $dotfiles; do
  ln -s ~/.dotfiles/$f ~/.$f
done

# Set zsh as the default shell
chsh -s /bin/zsh

# We're done
echo "Start a new terminal and enjoy!"
